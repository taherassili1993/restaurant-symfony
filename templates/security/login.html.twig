{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}
<style>
.inscrire
{
    width: 500px;
    margin-top: 150px;
    margin-bottom: 200px;
    margin-left: auto;
    margin-right: auto;
}

.inscrire form input
{
    width: 300px !important;
    height: 45px !important;
    border: 1px solid #ccc !important;
    padding-left: 10px !important;
    margin-top: 20px;
    margin-bottom: 20px;
}

.inscrire form input:focus
{
    outline: none !important;
    box-shadow: none !important;
    border: 1px solid #ccc !important;
}

</style>

<div class='inscrire'>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Se conencter</h1>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-sm btn-primary" type="submit">
        Se connecter
    </button>
</form>
</div>
{% endblock %}
