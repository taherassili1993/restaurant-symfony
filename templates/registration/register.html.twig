{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<style>
.inscrire
{
    width: 500px;
    margin-top: 150px;
    margin-bottom: 200px;
    margin-left: auto;
    margin-right: auto;
}

.inscrire form div
{
    margin-top: 20px;
    margin-bottom: 20px;
}

.inscrire form label
{
    width: 100px;
    margin-right: 40px;
}

.inscrire form input
{
    width: 300px;
    height: 45px;
    border: 1px solid #ccc;
    padding-left: 10px;
}

.inscrire form input:focus
{
    outline: none;
    box-shadow: none;
    border: 1px solid #ccc;
}

.inscrire form input[type='checkbox']
{
    width: 20px;
    height: 20px;
}

</style>
<div class='inscrire'>
    <h1>Inscrire maintenant</h1>

    {{ form_start(registrationForm) }}
        <div>
            <label for="registration_form_email" class="required">Nom</label>
            <input type="text" id="registration_form_name" name="name" required="required"></div>
        {{ form_row(registrationForm.email, {label: 'Email'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}

        <button class='btn btn-primary btn-sm' type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
